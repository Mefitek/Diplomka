{
    "name": "PT_CNN_LSTM_Test",
    "n_gpu": 1,

    "arch": {
        "type": "NN_1_Model",
        "args": {
            "input_channels": 4,
            "window_size": 2048,
            "num_classes": 1
        }
    },
    "data_loader": {
        "type": "PTDataLoader",
        "args": {
            "data_dir": "data/pt_1_n",
            "batch_size": 64,
            "shuffle": false,
            "num_workers": 2,
            "training": false,
            "test": true
        }
    },
    "loss": "bce_with_logits",
    "metrics": [
        "binary_accuracy"
    ],
    "trainer": {
        "epochs": 1,
        "save_dir": "saved/test_eval/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": false
    }
}