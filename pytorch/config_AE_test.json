{
    "name": "PT_AutoEncoder",
    "n_gpu": 1,

    "arch": {
        "type": "AE_Model",
        "args": {
            "input_channels": 1
        }
    },
    "data_loader": {
        "type": "AE_PTDataLoader",
        "args": {
            "data_dir": "data/pt_14",
            "batch_size": 64,
            "shuffle": true,
            "num_workers": 6,
            "training": false,
            "test": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mae_loss",
    "metrics": [
        "reconstruction_error"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/AE/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}