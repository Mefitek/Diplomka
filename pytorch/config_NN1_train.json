{
    "name": "NN_1_Train",
    "n_gpu": 1,

    "arch": {
        "type": "NN_1_Model",
        "args": {
            "input_channels": 4,
            "num_classes": 1
        }
    },
    "data_loader": {
        "type": "PTDataLoader",
        "args": {
            "data_dir": "data/pt_2",
            "batch_size": 64,
            "shuffle": true,
            "num_workers": 6,
            "training": true,
            "augment": true,
            "flip_prob": 0.5,
            "noise_std": 0.01
            }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_with_logits",
    "metrics": [
        "binary_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/NN_1/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}